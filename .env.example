# .env.example - Copy to .env and fill real values. Never commit .env!

# API Keys / Credentials
USGS_API_KEY=your_usgs_key_here                  # If required; many USGS endpoints are public
NOAA_TOKEN=your_noaa_token_here
NASA_EARTHDATA_USERNAME=your_nasa_username
NASA_EARTHDATA_PASSWORD=your_nasa_password

# Data Paths (relative to project root)
DATA_RAW_DIR=data/raw
DATA_PROCESSED_DIR=data/processed
CACHE_DIR=data/cache
EXTERNAL_DATA_DIR=data/external

# Hardware / CUDA
CUDA_VISIBLE_DEVICES=0                   # Comma-separated for multi-GPU, e.g. 0,1
# TORCH_USE_CUDA_DSA=1                   # Optional: for better CUDA error messages

# Other (add as needed later)
MLFLOW_TRACKING_URI=http://localhost:5000